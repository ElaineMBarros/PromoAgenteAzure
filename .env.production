# PromoAgente - Configurações de Exemplo
# Copie este arquivo para .env e configure suas próprias chaves

# OpenAI API (obrigatório)
OPENAI_API_KEY=sua_api_key_openai_aqui
OPENAI_MODEL=gpt-4o-mini

# Configurações do servidor
HOST=0.0.0.0
PORT=7000
ENVIRONMENT=production

# Debug (desabilitar em produção)
DEBUG=False
LOG_LEVEL=INFO

# Configurações de Email (opcional)
EMAIL_SENDER=promocoes.agente@gmail.com
EMAIL_PASSWORD=sua_senha_app_gmail
EMAIL_DESTINATION=promocoes@empresa.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587